{{> header}}

<div class="container">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-12 my-4">
      <div style="text-align:center">
        <h3 class="mb-3">Create a New Beacon!</h3>
      </div>
      <div class="text-right d-flex justify-content-center">
        <form id="form-beacon">
          <div class="mb-1">
            <label for="title" class="text-right">Title:</label>
            <input class="form-input" type="text" name="title" id="title"
              style="" required>
          </div>
          <div class="mb-1">
            <label class="text-right" for="category">Category:</label>
            <select class="form-input" name="category" id="category" required>
              <option value="" disabled selected>
                Please select a category
              </option>
              <option value="Arts">Arts & Culture</option>
              <option value="Book Club">Book Clubs</option>
              <option value="Career">Career & Business</option>
              <option value="Cars">Cars & Motorcycles</option>
              <option value="Community">Community & Environment</option>
              <option value="Dancing">Dancing</option>
              <option value="Education">Education & Learning</option>
              <option value="Fashion">Fashion & Beauty</option>
              <option value="Fitness">Fitness</option>
              <option value="Food">Food & Drink</option>
              <option value="Games">Games</option>
              <option value="Health">Health & Wellbeing</option>
              <option value="Hobbies">Hobbies & Crafts</option>
              <option value="LGBT">LGBT</option>
              <option value="Language">Language & Ethnic Identity</option>
              <option value="Lifestyle">Lifestyle</option>
              <option value="Politics">Movements & Politics</option>
              <option value="Movies">Movies & Film</option>
              <option value="Music">Music</option>
              <option value="Spirituality">New Age & Spirituality</option>
              <option value="Outdoors">Outdoors & Adventure</option>
              <option value="Paranormal">Paranormal</option>
              <option value="Parents">Parents & Family</option>
              <option value="Pets">Pets & Animals</option>
              <option value="Photography">Photography</option>
              <option value="Religion">Religion & Beliefs</option>
              <option value="SciFi">Sci-Fi & Fantasy</option>
              <option value="Singles">Singles</option>
              <option value="Socializing">Socializing</option>
              <option value="Sports">Sports & Recreation</option>
              <option value="Support">Support & Recovery</option>
              <option value="Tech">Tech</option>
              <option value="Writing">Writing</option>
            </select>
          </div>
          <div class="mb-0">
            <label class="text-right" for="desc" id="description" style="">Description:</label>
            <textarea class="form-input" name="desc" id="desc" rows="3"
              required></textarea>
          </div>
          <div class="mb-1">
            <label class="text-right" for="address">Address:</label>
            <input class="form-input" type="text" name="address" id="address"
              required>
          </div>
          <div class="mb-1">
            <label class="text-right" for="start-time">Start Time:</label>
            <input class="form-input form-input--center" type="time"
              name="start-time" id="start-time" required>
          </div>
          <div class="mb-1">
            <label class="text-right" for="end-time">End Time:</label>
            <input class="form-input form-input--center" type="time"
              name="end-time" id="end-time" required>
          </div>
          <div class="mb-1">
            <label class="text-right" for="date">Date:</label>
            <input class="form-input form-input--center" type="date" name="date"
              id="date" required>
          </div>
          <div class="mt-3">
            <input type="submit" value="Create Beacon" id="btn-create-beacon"
              class="btn btn-primary btn-lg btn-block">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{> footer}}

<script src="/js/beacon.js"></script>